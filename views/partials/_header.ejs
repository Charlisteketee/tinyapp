<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>

    <% if (user) { %>
      <span class="navbar-text">
        Logged in as: <%= user.email %>!
      </span>
      <form method="POST" action="/logout">
        <button type="submit" class="btn btn-outline-dark">Logout</button>
      </form>
    <% } else { %>
      
        <!-- Form for logging in -->
    <form method="POST" action="/login" class="form-inline">
      <div class="input-group ml-auto"> <!-- ml-auto pushes the content to the right -->
        <input type="text" id="email" name="email" class="form-control" placeholder="username" required>
        <div class="input-group-append">
          <button type="submit" class="btn btn-outline-dark">Login</button>
        <% } %>
      </div>
    </form>
      <a class="btn btn-outline-dark" class="nav-item nav-link" href="/register">Register</a>
    </div>
  </nav>
</header>